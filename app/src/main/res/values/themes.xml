<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EpiWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/epi_theme_primary</item>
        <item name="colorPrimaryVariant">@color/epi_theme_primary_dark</item>
        <item name="colorOnPrimary">@color/epi_theme_primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/epi_theme_primary_dark</item>
    </style>

    <style name="Theme.EpiWidget.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">50dp</item>
        <item name="appWidgetInnerRadius">30dp</item>
    </style>

    <style name="Theme.EpiWidget.AppWidgetContainer" parent="Theme.EpiWidget.AppWidgetContainerParent">
        <item name="appWidgetPadding">12dp</item>
    </style>
</resources>